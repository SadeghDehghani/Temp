@model HrWorkflow.Models.Request
@{
    ViewData["Title"] = "ثبت درخواست";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Create" method="post" class="mt-3">
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">نوع درخواست</label>
            <select asp-for="RequestTypeId" asp-items="ViewBag.RequestTypes" class="form-select"></select>
        </div>
        <div class="col-md-6">
            <label class="form-label">درخواست‌دهنده</label>
            <select asp-for="RequesterEmployeeId" asp-items="ViewBag.Employees" class="form-select"></select>
        </div>
        <div class="col-12">
            <label asp-for="Content" class="form-label"></label>
            <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">ثبت</button>
        <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
    </div>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial" />}

