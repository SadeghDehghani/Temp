@model IEnumerable<HrWorkflow.Models.Employee>
@{
    ViewData["Title"] = "کارمندان";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <a class="btn btn-primary" asp-action="Create">افزودن</a>
    </div>
<div class="table-responsive">
    <table class="table table-striped" data-datatable="true">
        <thead>
            <tr>
                <th>نام</th>
                <th>ایمیل</th>
                <th>بخش</th>
                <th>سمت</th>
                <th>فعال</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.FullName</td>
                <td>@e.Email</td>
                <td>@e.Department</td>
                <td>@e.Position</td>
                <td>
                    @if (e.IsActive) {<span class="badge bg-success">بله</span>} else {<span class="badge bg-secondary">خیر</span>}
                </td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@e.Id">جزئیات</a>
                    <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@e.Id">ویرایش</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@e.Id">حذف</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

