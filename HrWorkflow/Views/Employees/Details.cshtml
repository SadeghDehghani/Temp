@model HrWorkflow.Models.Employee
@{
    ViewData["Title"] = "جزئیات کارمند";
}
<h2>@ViewData["Title"]</h2>
<dl class="row">
    <dt class="col-sm-2">نام</dt>
    <dd class="col-sm-10">@Model.FullName</dd>
    <dt class="col-sm-2">ایمیل</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">بخش</dt>
    <dd class="col-sm-10">@Model.Department</dd>
    <dt class="col-sm-2">سمت</dt>
    <dd class="col-sm-10">@Model.Position</dd>
    <dt class="col-sm-2">فعال</dt>
    <dd class="col-sm-10">@(Model.IsActive ? "بله" : "خیر")</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">ویرایش</a>
<a asp-action="Index" class="btn btn-secondary">بازگشت</a>

