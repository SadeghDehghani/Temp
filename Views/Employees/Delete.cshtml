@model HrWorkflow.Models.Employee
@{
    ViewData["Title"] = "حذف کارمند";
}
<h2>@ViewData["Title"]</h2>
<div class="alert alert-warning">آیا از حذف «@Model.FullName» مطمئن هستید؟</div>
<dl class="row">
    <dt class="col-sm-2">ایمیل</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">بخش</dt>
    <dd class="col-sm-10">@Model.Department</dd>
    <dt class="col-sm-2">سمت</dt>
    <dd class="col-sm-10">@Model.Position</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">حذف</button>
    <a asp-action="Index" class="btn btn-secondary">انصراف</a>
</form>

